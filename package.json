{
  "name": "esbuild-typescript-library-template",
  "description": "Typescript Esbuild Library Template",
  "version": "1.8.0",
  "author": "spa5k <unbuttun@gmail.com>",
  "bugs": {
    "url": "https://github.com/spa5k/esbuild-typescript-library-template/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@yarnpkg/esbuild-plugin-pnp": "^2.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.4",
    "@semantic-release/npm": "9.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "commitizen": "4.2.4",
    "dotenv": "16.0.0",
    "dprint": "^0.24.2",
    "esbuild": "0.14.29",
    "eslint": "8.12.0",
    "eslint-config-galex": "3.6.5",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-inclusive-language": "2.2.0",
    "eslint-plugin-jest-formatting": "3.1.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-sonarjs": "0.13.0",
    "eslint-plugin-unicorn": "41.0.1",
    "husky": "7.0.4",
    "node-dev": "7.4.2",
    "pinst": "3.0.0",
    "semantic-release": "19.0.2",
    "tslib": "2.3.1",
    "tsup": "5.12.1",
    "typescript": "4.6.3",
    "vite": "^2.9.1",
    "vitest": "^0.8.1"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/spa5k/esbuild-typescript-library-template#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pnpm format && pnpm lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "cjs",
    "dts",
    "esbuild",
    "esm",
    "library",
    "template",
    "typescript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "packageManager": "yarn@3.2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spa5k/esbuild-typescript-library-template.git"
  },
  "scripts": {
    "build": "NODE_ENV='production' tsup-node",
    "build:dev": "NODE_ENV='development' tsup-node",
    "dev": "node-dev dist/main.js",
    "format": "dprint fmt",
    "lint": "eslint src --ext .ts",
    "semantic-release": "semantic-release",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "typings": "dist/index.d.ts"
}
